datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Recipe {
  id          String   @id @default(uuid())
  title       String
  description String?
  ingredients String[]
  createdAt   DateTime @default(now())
}

model User {
  id             String   @id @default(uuid())
  name           String
  email          String
  hashedPassword String
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}
