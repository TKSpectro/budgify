{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Backend",
            "type": "shell",
            "command": "cd budgify-frontend && npm start",
            "presentation": {
                "reveal": "always",
                "panel": "new",
                "group": "develop"
            },
            "runOptions": { "runOn": "folderOpen" }
        },
        {
            "label": "Frontend",
            "type": "shell",
            "command": "cd budgify-backend && npm run start:dev",
            "presentation": {
                "reveal": "silent",
                "panel": "new",
                "group": "develop"
            },
            "runOptions": { "runOn": "folderOpen" }
        },
        {
            "label": "Prisma Studio",
            "type": "shell",
            "command": "cd budgify-backend && npx prisma studio --browser none",
            "presentation": {
                "reveal": "never",
                "panel": "dedicated",
                "group": "background"
            },

            "runOptions": { "runOn": "folderOpen" }
        }
    ]
}
